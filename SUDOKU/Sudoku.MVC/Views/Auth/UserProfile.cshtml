@model UserProfileViewModel
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Sudoku.az | Profile</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
		  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
		  integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
		  crossorigin="anonymous" referrerpolicy="no-referrer" />
	<script src="~/assets/jquery.min.js"></script>
	<script src="~/assets/jquery.js"></script>
</head>


<body style="background-color: #9de2ff;">
	<a class="btn btn-success" href="index.html"><i class="fa fa-sign-out" aria-hidden="true"></i> Back Home </a>
	<form class="form" method="post" id="registrationForm">
		<div class="container bootstrap snippet" style="margin-top: 50px;">
			<div class="row">
				<div class="row">
					<div class="col-sm-3">
						<!--left col-->
						<div class="col-sm-10">
							<h1>@Model.Username</h1>
						</div>
						<div class="text-center" style="width: 70%;">
							<img src="~/assets/images/user/@Model.ProfilPhoto" class="avatar img-circle img-thumbnail"
								 alt="avatar">
							<h6>Upload a different photo...</h6>
							<input asp-for="Image" type="file" class="text-center center-block file-upload">
						</div>
						</hr><br>

						<hr>
						<ul class="list-group">
							<li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
							<li class="list-group-item text-right">
								<span class="pull-left">
									<strong>
										Completed Games
										:
									</strong>
								</span>
								@Model.CompletedGames
							</li>
							<li class="list-group-item text-right">
								<span class="pull-left">
									<strong>
										&#11088&#11088&#11088
										:
									</strong>
								</span> @Model.ThreeStar
							</li>
							<li class="list-group-item text-right">
								<span class="pull-left"><strong>Score :</strong></span>
								@Model.TotalScore;
							</li>
						</ul>
						<hr>
					</div><!--/col-3-->
					<div class="col-sm-7" style="margin-top: 25px;">
						<div class="tab-content">
							<div class="tab-pane active" id="home">
								<div class="form-group">
									<div class="col-xs-6">
										<label for="first_name">
											<h4>User name</h4>
										</label>
										<input asp-for="Username" type="text" class="form-control" name="first_name" id="first_name"
											   placeholder="user name" title="enter your first name if any." disabled>
									</div>
								</div>

								<div class="form-group">

									<div class="col-xs-6">
										<label for="phone">
											<h4>Phone</h4>
										</label>
										<input asp-for="Phone" type="text" class="form-control" name="phone" id="phone"
											   placeholder="enter phone" title="enter your phone number if any." disabled>
									</div>
								</div>

								<div class="form-group">

									<div class="col-xs-6">
										<label for="email">
											<h4>Email</h4>
										</label>
										<input asp-for="Email" type="email" class="form-control" name="email" id="email"
											   placeholder="you@email.com" title="enter your email." disabled>
									</div>
								</div>
								<div class="form-group">

									<div class="col-xs-6">
										<label for="password">
											<h4>Password</h4>
										</label>
										<input asp-for="Password" type="password" class="form-control" name="password" id="password"
											   placeholder="new password" title="enter your new password." disabled>
									</div>
								</div>
								<div class="form-group">

									<div class="col-xs-6">
										<label for="password2">
											<h4>Verify</h4>
										</label>
										<input asp-for="CompletedGames" type="password" class="form-control" name="confirm password" id="password2"
											   placeholder="password2" title="enter your password2." disabled>
									</div>
								</div>


								<div class="form-group">
									<div class="col-xs-12">
										<br>
										<button class="btn btn-lg btn-secondary" id="btnChence">
											<i class="fa fa-pencil" aria-hidden="true"></i> Chance infotmation
										</button>
										<button class="btn btn-lg btn-dark" id="btnReset">
											<i class="fa fa-repeat" aria-hidden="true"></i> Reset
										</button>
										<button class="btn btn-lg btn-success" id="btnSave" type="submit">
											<i class="fa fa-check" aria-hidden="true"></i> Save
										</button>
									</div>
								</div>
								<hr>

							</div><!--/tab-pane-->
						</div><!--/tab-pane-->
					</div><!--/tab-content-->
				</div><!--/col-9-->
			</div><!--/row-->
	</form>
	<script>
		$('#btnChence').click(function () {
			event.preventDefault();
			$(".form-control[disabled]").prop("disabled", false);
		})

		$('#btnReset').click(function () {
			location.reload();
		})
	</script>
</body>

</html>